<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/grey"
    tools:context=".Fragment.WhatshotFragment">


    <ImageView
        android:id="@+id/items_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/cat1" />

    <TextView
        android:id="@+id/item_titl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="MakeUp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/price_itme"
        app:layout_constraintStart_toEndOf="@+id/items_imageView"
        app:layout_constraintTop_toTopOf="@+id/items_imageView" />

    <TextView
        android:id="@+id/price_itme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="500$"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/items_imageView"
        app:layout_constraintStart_toEndOf="@+id/items_imageView"
        app:layout_constraintTop_toTopOf="@+id/items_imageView"
        app:layout_constraintVertical_bias="0.753" />

    <ImageView
        android:id="@+id/deletePic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxfovorite"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxfovorite"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/price_itme"
        app:layout_constraintTop_toTopOf="@+id/checkBoxfovorite"
        app:srcCompat="@drawable/baseline_delete_forever_24" />

    <CheckBox
        android:id="@+id/checkBoxfovorite"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="تحديد"
        android:textColor="@color/black"
android:background="@color/light_lavender"        app:layout_constraintBottom_toBottomOf="@+id/price_itme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toEndOf="@+id/price_itme"
        app:layout_constraintTop_toTopOf="@+id/price_itme"
        app:layout_constraintVertical_bias="0.461" />
</androidx.constraintlayout.widget.ConstraintLayout>